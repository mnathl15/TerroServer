{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "api/**/*",
    "src/index.ts",
    "src/utils",
    "src/types",
    "src/routes",
    "src/database",
    "src/controllers",
    "src/constants"
  ],
  "exclude": ["node_modules"]
}
